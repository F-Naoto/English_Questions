<%=form_with(model:@user, method: :post, local:true) do |f| %>
<%=f.label "名前" %>
<%=f.text_field :name %>
<%=f.label "メールアドレス" %>
<%=f.email_field :email %>
<%=f.label "パスワード" %>
<%=f.password_field :password %>
<%=f.label "パスワード確認" %>
<%=f.password_field :password_confirmation %>
<%=f.submit "新規登録", class:"new_user_btn"%>
<% end %>